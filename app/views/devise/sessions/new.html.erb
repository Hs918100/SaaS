
<section class="vh-100 mt-1">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100 ">

      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <h2>Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div data-mdb-input-init class="form-outline mb-4">
            <%= f.label :email, class: "form-label", for: "form1Example13" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "form1Example13", class: "form-control form-control-lg" %>
          </div>

          <div data-mdb-input-init class="form-outline mb-4">
            <%= f.label :password, class: "form-label", for: "form1Example23" %><br />
            <%= f.password_field :password, autocomplete: "current-password", 
            id: "form1Example23", class: "form-control form-control-lg" %>
          </div>

          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
          </div>

          <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</section>


