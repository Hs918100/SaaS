<h2 class="mt-2 text-center" style="color: #0384fc;"> Available Members </h2>
<%= link_to "New Member", new_member_path %>
<%= link_to  "Invite a User", invite_members_path %> 
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col" class="text-secondary">Id</th>
      <th scope="col" class="text-secondary">User</th>
      <th scope="col" class="text-secondary">Tenant</th>
      <th scope="col" class="text-secondary">Joined Date</th>
      <th scope="col" class="text-secondary">Actions</th>
    </tr>
  </thead>
  <% if @members %>
        <tbody>
            <% @members.each do |member| %>
                <tr>
                    <th scope="row"> <%= link_to member.id, member %></th>
                    <td><%= member.user.email %></td>
                    <td><%= member.tenant.name %></td>
                    <td><%= member.created_at.strftime("%B %d, %Y")  %></td>
                    <td>
                      <%= link_to 'Show', member  %>
                      <%= link_to  "Edit", edit_member_path(member) %>
                    </td>
                </tr>
            <% end %>
        </tbody>
  <% end %>
  
</table>
